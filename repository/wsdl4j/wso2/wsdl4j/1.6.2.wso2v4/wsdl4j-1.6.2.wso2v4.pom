<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">


    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>carbon-kernel-dependents</artifactId>
        <version>4.2.0</version>
        <relativePath>../../../../../../dependencies/pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>wsdl4j.wso2</groupId>
    <artifactId>wsdl4j</artifactId>
    <packaging>bundle</packaging>
    <name>wsdl4j.wso2</name>
    <version>1.6.2.wso2v4</version>
    <description>
        org.wso2.carbon.xmlschema. This bundle will export packages from wsdl4j.jar
    </description>
    <url>http://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>wsdl4j</groupId>
            <artifactId>wsdl4j</artifactId>
            <version>${wsdl4j.version}</version>
            <optional>true</optional>
            <exclusions>
                <exclusion>
                    <groupId>org.apache.maven</groupId>
                    <artifactId>maven-plugin-api</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.maven</groupId>
                    <artifactId>maven-project</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.maven</groupId>
                    <artifactId>maven-artifact</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            javax.wsdl.*; version=${wsdl4j.version},
                            com.ibm.wsdl.*; version=${wsdl4j.version}
                        </Export-Package>
                        <Import-Package>
                            !javax.wsdl.*; version=${wsdl4j.version},
                            !com.ibm.wsdl.*; version=${wsdl4j.version},
                            *;resolution:=optional
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <wsdl4j.version>1.6.2-wso2v4</wsdl4j.version>
    </properties>

</project>
